{# templates/program/episode_show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ program.title }} - Saison {{ season.number }} - Épisode {{ episodes.number }}{% endblock %}

{% block body %}
    <h1>{{ program.title }} - Saison {{ season.number }} - Épisode {{ episodes.number }}: {{ episodes.title }}</h1>

    <p>Résumé de l'épisode : {{ episodes.synopsis }}</p> 
    

    <a href="{{ path('program_season_show', {'slug': program.slug, 'seasonslug': season.seasonslug}) }}">Retour à la saison</a>
    <a href="{{ path('program_show', {'slug': program.slug}) }}">Retour à la série</a>
{% endblock %}
