{# templates/program/season_show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ program.title }} - Saison {{ season.number }}{% endblock %}

{% block body %}
    <h1>{{ program.title }} - Saison {{ season.number }}</h1>

    <ul>
        {% for episode in episodes %}
            <li>
                <a href="{{ path('program_episode_show', {'program': program.id, 'season': season.id, 'episodes': episode.id}) }}">
                    Épisode {{ episode.number }}: {{ episode.title }}
                </a>
            </li>
        {% endfor %}
    </ul>

    <a href="{{ path('program_show', {'id': program.id}) }}">Retour à la série</a>
{% endblock %}
