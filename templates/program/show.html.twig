{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.slug }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
    </div>




    <h1>{{ program.title }}</h1>

    <h2>Saisons :</h2>
     <ul>
        {% for season in seasons %}
            <li>
                <a href="{{ path('program_season_show', {'slug': program.slug, 'seasonslug': season.seasonslug}) }}">
                    Saison {{ season.number }}
                </a>
            </li>
        {% endfor %}
    </ul> 

<strong>Actors:</strong>
<ul>
    {% for actor in program.actors %}
        <li><a href="{{ path('actor_show', {'id': actor.id}) }}">{{ actor.name }}</a></li>
    {% else %}
        <li>No actors for this program</li>
    {% endfor %}
</ul>






    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}